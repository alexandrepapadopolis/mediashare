# =================================================================
# CONFIGURAÇÕES DE FILESYSTEM (HOST)
# =================================================================
# Caminho absoluto na máquina local para persistência do Storage (Supabase).
MEDIA_PATH=E:/mediashare-files

# =================================================================
# SUPABASE (BACKEND / SERVER)
# =================================================================
# Gateway do Supabase local (Kong).
SUPABASE_URL=http://host.docker.internal:54321

# Chave pública (Anon Key) — pode ser exposta ao cliente via runtime.
SUPABASE_ANON_KEY=sb_publishable__REPLACE_ME__

# Chave sensível (Service Role) — NUNCA expor ao frontend.
SUPABASE_SERVICE_ROLE_KEY=sb_secret__REPLACE_ME__

# =================================================================
# APLICAÇÃO
# =================================================================
SUPABASE_STORAGE_BUCKET=media
MEDIASHARE_SYSTEM_USER_ID=__REPLACE_ME_UUID__

# Segredo de sessão (server-only). Gere um valor forte e único.
SESSION_SECRET=__GENERATE_STRONG_SECRET__
